<div class="body-container">
  <div class="btn-back">
    <%= link_to '< Retour', dashboard_path %>
  </div>

  <div class="primary-container">
    <h2>Mon évènement</h2>

    <div class="date-show">
     <%= @event.date.strftime('%d/%m/%Y') %>
    </div>

    <div class="secondary-container">
      <h3>Nom de l'évènement</h3>
      <%= @event.name %>
    </div>

    <% if @event.description != "" %>
      <div class="secondary-container">
        <h3>Description</h3>
        <%= @event.description %>
      </div>
    <% end %>

    <% if @event.url != "" %>
      <div class="secondary-container">
        <h3>Lien</h3>
        <%= @event.url %>
      </div>
    <% end %>


    <% if @event.gift.class.name != "NilClass" %>
      <h3>Mes idées cadeaux</h3>
      <ul>
        <% @event.gift.generated_list.each do |gift| %>
          <li data-save-gift-target="gift">
            <div class="secondary-container geeft">
              <div class="gift-icon">
                <i class="fa-solid fa-gift"></i>
              </div>
              <div class="gift">
                <%= gift %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <%= link_to 'Generate list', new_event_gift_path(@event) %>
    <% end %>



    <%= link_to 'Edit', edit_event_path(@event) %>
    <%= link_to 'Delete', event_path(@event), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </div>

</div>
