<div data-controller="refresh-gift">
  <ul data-controller="save-gift" data-save-gift-target="list">
    <% @gifts_to_display.each do | gift | %>
            <div class="secondary-container">
              <li class="gift-container" data-save-gift-target="gift">
                <div class="gift-left">
                  <%= image_tag('open-gift.png', class: "logo-gift") %>
                  <div class="gift-name">
                    <%= gift %>
                  </div>
                </div>
                <% if @user == @gift.user %>
                  <span class="refresh-container" data-action="click->refresh-gift#refresh" data-refresh-gift-target="refresh" class ="gift-delete">
                    <div class="refresh-arrow">
                      <%= image_tag('refresh.svg', class: "logo-refresh") %>
                    </div>
                    <div class="refresh-text">
                      Remplacer
                    </div>
                  </span>
                <% end %>
              </li>
            </div>
    <% end %>
  </ul>
</div>
