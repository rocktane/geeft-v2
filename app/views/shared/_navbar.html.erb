<div class="navbar">

  <!-- Bouton Back Mobile -->
  <%= link_to :back, class: 'chevron-mobile' do %>
    <i class="fa-solid fa-chevron-left"></i>
  <% end %>

  <div class="navbar-left">
    <%= link_to image_tag('geeft-logo-mobile.svg', alt: 'Geeft logo'), root_path %>
    <!-- Voir Helper Navbar Titles -->
    <h1> <%= navbar_title %> </h1>
  </div>


  <div class="dropdown-menu">
    <details>
      <summary>
        <%= image_tag('menu.svg', alt: 'Menu', class:'menu') %>
      </summary>
      <ul>
        <li>
          <%= link_to root_path do %>
            <%= image_tag('dashboard.svg', alt: 'Dash', class:'menu-items') %>
            Dashboard
          <% end %>
        </li>
        <li>
          <%= link_to edit_user_registration_path do  %>
            <%= image_tag('settings.svg', alt: 'Settings', class:'menu-items') %>
            Paramètres
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, data: { turbo_method: :delete } do %>
            Déconnexion
          <% end %>
        </li>
      </ul>
    </details>
  </div>
</div>
