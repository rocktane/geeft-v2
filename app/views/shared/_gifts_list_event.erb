

<div class="gifts-event">
  <% if !@event.gift.nil? %>
    <h3>Les id√©es cadeaux</h3>
    <ul data-controller="delete-gift">
      <% @event.gift_list.each do |gift| %>
        <li data-update-event-target="gift">
          <div class="secondary-container">
          <div class="gift-container">
            <div class="gift-left">
                <%= image_tag('open-gift.png', alt: 'Cadeau', class:"logo-gift") %>
                <%# <i class="fa-solid fa-gift"></i> %>
              <div class="gift-name">
                <%= gift %>
              </div>
            </div>
            <div class="gift-delete" data-action="click->delete-gift#delete">
              <div class="refresh-arrow">
              <%= image_tag('bin2.svg', class:'logo-refresh') %>
            </div>
          </div>
          </div>
          </div>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
