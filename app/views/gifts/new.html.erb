<% model_to_use = [@event, @gift] || @gift %>

<%= form_with(model: model_to_use, url: event_gifts_path) do |f| %>
  <%= f.label :budget, "Budget" %>
  <%= f.text_field :budget %>
  <%= f.label :age, "Age" %>
  <%= f.text_field :age %>
  <%= f.label :genre, "Genre" %>
  <%= f.select :genre, ['neutral', 'female', 'male'] %>
  <%= f.label :occasion, "Occasion" %>
  <%= f.select :occasion, Gift::OCCASIONS.sort %>
  <%= f.label :relationship, "Relationship" %>
  <%= f.select :relationship, Gift::RELATIONSHIPS.sort %>
  <%= f.label :interests, "Interests" %>
  <%= f.select :interests, Gift::INTERESTS.sort, { multiple: true } %>
  <%= f.button :submit %>
<% end %>
