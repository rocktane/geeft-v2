<div class="body-container">
  <div class="btn-back">
    <%= link_to '< Retour', root_path %>
  </div>
  <div class="user-container">
    <h2>Sign up</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <div class="info-user">
          <h3> Email </h3>
          <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
        </div>
        <div class="info-user">
          <h3> Nom d'utilisateur </h3>
          <%= f.input :username,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "username" }%>
        </div>
        <!--
        <%= f.input :birthday,
              required: true,
              autofocus: true,
              input_html: { autocomplete: "birthday" } %>
        -->
        <div class="info-user">
          <h3> Date d'anniversaire </h3>
          <%= f.text_field :birthday,
              required: true,
              autofocus: true,
              placeholder: "dd/mm/aaaa",
              value: @user.birthday&.strftime("%d/%m/%Y"),
              autocomplete: "birthday" %>
        </div>

        <div class="info-user">
          <h3> Mot de passe </h3>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="info-user">
          <h3> Confirmation du mot de passe </h3>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "btn-secondary" %>
      </div>


      <%= render "devise/shared/links" %>

    <% end %>
  </div>
</div>
