<div class="body-container">
    <div class="btn-back">
      <%= link_to '< Retour', :back %>
    </div>



    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <div class="info-user">
          <h4> Email </h4>
          <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
        </div>

        <div class="info-user">
          <h4> Nom d'utilisateur </h4>
          <%= f.input :username,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "username" }%>
        </div>
        <!--
        <%= f.input :birthday,
              required: true,
              autofocus: true,
              input_html: { autocomplete: "birthday" } %>
        -->
        <div class="info-user">
          <h4> Date d'anniversaire </h4>
          <%= f.text_field :birthday,
              required: true,
              autofocus: true,
              placeholder: "dd/mm/aaaa",
              value: @user.birthday&.strftime("%d/%m/%Y"),
              autocomplete: "birthday" %>
        </div>

        <div class="info-user">
          <h4> Mot de passe </h4>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="info-user">
          <h4> Confirmation du mot de passe </h4>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="btn__theme btn btn-green">
          <%= button_tag(type: 'submit') do %>
            <div class="btn__content">
              <%= image_tag('signup.svg', alt: 'Inscription') %>
              Inscription
            </div>
        <% end %>
        </div>
    <%= render "devise/shared/links" %>
      </div>



    <% end %>


  </div>
