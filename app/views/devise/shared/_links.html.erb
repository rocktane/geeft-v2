
<%- if controller_name != 'sessions' %>
  <div class="switch-link">
    Déja inscrit ?
    <%= link_to new_session_path(resource_name) do %>
      <div>Cliquez ici</div>
    <% end %>
  </div>
<% end %>


<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="switch-link">
    Pas encore inscrit ?
    <%= link_to new_registration_path(resource_name) do %>
      <div>Cliquez ici</div>
    <% end %>
  </div>
<% end %>

