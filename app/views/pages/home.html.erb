<!-- navbar homepage mobile -->
<div class="mobile-homepage">
  <%= link_to raw("<i class=\"fa-regular fa-calendar\"></i>"), dashboard_path %>
  <div class="slogan-mobile">
    Trouve le cadeau parfait
  </div>
  <div class="menu">
    <!-- Dropdown Menu à prévoir en JS -->
    <i class="fa-solid fa-bars"></i>
  </div>
</div>


<!-- homepage logged-out desktop -->
<div class="body-container">
  <div class="home-page-logged-out">
    <% if @user == "guest" %>
      <div class="geeft-presentation">
        <h2 class="home-subtitle">Bienvenue sur geeft, la plateforme pour ne plus se prendre la tête avec les cadeaux</h2>
        <p class="presentation-text">Grâce à geeft, l'appli rend la quête du cadeau parfait super facile. Il suffit de partager quelques infos clés, comme l'âge ou le budget, et hop, Geeft te propose une sélection d'idées personnalisées et originales qui devraient t'inspirer et assurer la joie de tes proches.</p>
      </div>

      <div class="logged-out-btn-container">
        <div class="logged-out-btn">
          <p>Rejoins le Club !</p>
          <div class="btn-home btn-green">
            <%= link_to 'Inscription', new_user_registration_path %>
          </div>
        </div>
        <div class="logged-out-btn">
          <p>Déjà inscrit ?</p>
          <div class="btn-home btn-purple">
            <%= link_to 'Connexion', new_user_session_path %>
          </div>
        </div>
      </div>
    </div>
    <% else %>

<!-- homepage logged-in desktop -->
    <div class="home-title">
    <%= "Hello " + @user.username if @user.username%>
    </div>
    <div class="home-subtitle">
      Prochains évènements :
    </div>
    <%= render 'shared/event_home' %>
    <div class="home-buttons">
      <%= link_to 'Tableau de Bord', dashboard_path, class: "btn btn-big btn-green"%>
      <%= link_to 'Trouver un cadeau', new_gift_path, class: "btn btn-big btn-purple" %>
    </div>


  <!-- Bouton rond mobile pour générer la liste cadeau -->
  <div class="btn-mobile">
    <%= link_to raw("<i class=\"fa-solid fa-gift\"></i>"), new_gift_path %>
  </div>
  <% end %>
</div>
